{
    "manifest_version": 2,
    "name": "Google Navigation",
    "description": "A Chrome extension with a set of hotkeys to navigate through Google Search. ",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": [
                "https://www.google.com/*",
                "http://www.google.com/*"
            ],
            "css": [
                "main.css"
            ],
            "js": [
                "main.js"
            ]
        }
    ]
}